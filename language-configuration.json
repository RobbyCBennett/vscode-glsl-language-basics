{
	"comments": {
		"lineComment": {
			"comment": "//"
		},
		"blockComment": [ "/*", "*/" ]
	},
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
	],
	"autoClosingPairs": [
		{
			"open": "{",
			"close": "}",
			"notIn": ["comment"]
		},
		{
			"open": "[",
			"close": "]",
			"notIn": ["comment"]
		},
		{
			"open": "(",
			"close": ")",
			"notIn": ["comment"]
		},
		{
			"open": "/* ",
			"close": " */"
		},
		{
			"open": "/*",
			"close": "*/"
		},
	],
	"surroundingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"]
	],
	"folding": {
		"offSide": true,
		"markers": {
			"start": "^\\s*#region\\b",
			"end": "^\\s*#endregion\\b"
		}
	}
}
